<Window x:Class="xfsz_Log.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xfsz_Log"
        mc:Ignorable="d"
        Title="悬浮时钟日志记录器" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <RichTextBox x:Name="rtb" Margin="10,10,10,50" FontSize="12" FontFamily="Cascadia Code">
            <FlowDocument Focusable="True" LineHeight="1">
                <Paragraph x:Name="info" Background="#FFECECEC">(13:00:00)[Info]日志测试-消息</Paragraph>
                <Paragraph x:Name="warn" Background="#FFFBD6B1">(13:00:00)[Warn]日志测试-警告</Paragraph>
                <Paragraph x:Name="error" Background="#FFFD8C8C">(13:00:00)[Error]日志测试-错误</Paragraph>
                <Paragraph x:Name="stop" Background="#FFFF3333">(13:00:00)[Stop]日志测试-无法继续运行</Paragraph>

            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
